@model IEnumerable<CarHouseThree.Models.VehicleDto>


@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Vehicle Owner
        </th>

        <th>
            Make
        </th>
        <th>
            Model
        </th>
        <th>
           Year
        </th>
        <th>
            Colour
        </th>
        <th>
           Mileage: (Thousands)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.UserName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleMake)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleKMs)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VehicleID }) |
                @Html.ActionLink("Details", "Details", new { id = item.VehicleID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VehicleID })
            </td>
        </tr>
    }

</table>
